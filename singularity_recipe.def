
bootstrap: docker
From: nvidia/cuda:11.7.0-devel-ubuntu22.04

%labels
	MANTAINER Robert Loftin

%post
	# Downloads the latest package lists (important).
	apt-get update -y
	#DEBIAN_FRONTEND=noninteractive apt-get install -y software-properties-common
	#DEBIAN_FRONTEND=noninteractive add-apt-repository ppa:deadsnakes/ppa

	# Install python and other tools
	# Non-interactive is used to ensure prompts are omitted.
	DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
	python3-dev \
	python3-tk \
	python3-pip \
	python3-setuptools \
	systemd \
	curl \
	git

	# Reduce image size
	rm -rf /var/lib/apt/lists/*

	# Update pip
	python3 -m pip install --upgrade pip

	# Install 'wheel' first to allow building 'SuperSuit'
	python3 -m pip install wheel

	# Install python libraries
	python3 -m pip install GitPython==3.1.31
	python3 -m pip install numpy==1.24.0
	python3 -m pip install pandas==1.5.3
	python3 -m pip install PyYAML==6.0
	python3 -m pip install tensorboardX==2.6
	
	# For clusters with older GPUs, may need an older version of Torch and CUDA
	python3 -m pip install torch==1.13.1 --timeout 600
